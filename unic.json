{
    "$schema": "https://schema-storage.s3-website.tinkoff.ru/unic/schema-v1.json",
    "spec": {
        "apps": {
            "merestorage-front": {
                "qa": {
                    "name": "merestorage-front",
                    "namespace": "cobrowsing",
                    "type": "prod",
                    "environment": "yandex-dev",
                    "services": [
                        {
                            "name": "app",
                            "envs": {
                                "VITE_API_URL": "$[ENV:API_URL]",
                                "NODE_ENV": "dev"
                            },
                            "dockerFile": "./docker/front.Dockerfile",
                            "resources": {
                                "replicas": 2
                            }
                        }
                    ]
                },
                "prod": {
                    "name": "merestorage-front",
                    "namespace": "cobrowsing",
                    "type": "prod",
                    "environment": "yandex-prod",
                    "services": [
                        {
                            "name": "app",
                            "envs": {
                                "VITE_API_URL": "$[ENV:API_URL_PROD]",
                                "NODE_ENV": "prod"
                            },
                            "dockerFile": "./docker/front.Dockerfile",
                            "resources": {
                                "replicas": 2,
                                "requests": {
                                    "cpu": "500m",
                                    "memory": "512Mi"
                                },
                                "limits": {
                                    "cpu": "500m",
                                    "memory": "512Mi"
                                }
                            }
                        }
                    ]
                }
            },
            "merestorage-back": {
                "qa": {
                    "name": "merestorage-back",
                    "namespace": "cobrowsing",
                    "type": "prod",
                    "environment": "yandex-dev",
                    "services": [
                        {
                            "name": "app",
                            "envs": {
                                "POSTGRES_URL": "$[ENV:MERESTORAGE_POSTGRES_URL]",
                                "SAGE_API": "$[ENV:SAGE_API]",
                                "NODE_ENV": "dev",
                                "PORT": "3000",
                                "SECRET_KEY": "$[ENV:MERESTORAGE_SECRET_KEY]",
                                "INIT_VECTOR": "$[ENV:MERESTORAGE_INIT_VECTOR]"
                            },
                            "dockerFile": "./docker/back.Dockerfile",
                            "resources": {
                                "replicas": 2
                            },
                            "probes": {
                                "liveness": {
                                    "path": "/api/healthz",
                                    "port": 3000
                                },
                                "readiness": {
                                    "path": "/api/readyz",
                                    "port": 3000
                                }
                            },
                            "annotations": {
                                "service": {
                                    "sage/group": "merestorage"
                                }
                            }
                        }
                    ]
                },
                "prod": {
                    "name": "merestorage-back",
                    "namespace": "cobrowsing",
                    "type": "prod",
                    "environment": "yandex-prod",
                    "services": [
                        {
                            "name": "app",
                            "envs": {
                                "POSTGRES_URL": "$[ENV:MERESTORAGE_POSTGRES_URL_PROD]",
                                "SAGE_API": "$[ENV:SAGE_API]",
                                "NODE_ENV": "prod",
                                "PORT": "3000",
                                "SECRET_KEY": "$[ENV:MERESTORAGE_SECRET_KEY_PROD]",
                                "INIT_VECTOR": "$[ENV:MERESTORAGE_INIT_VECTOR_PROD]"
                            },
                            "dockerFile": "./docker/back.Dockerfile",
                            "resources": {
                                "replicas": 2,
                                "requests": {
                                    "cpu": "500m",
                                    "memory": "512Mi"
                                },
                                "limits": {
                                    "cpu": "500m",
                                    "memory": "512Mi"
                                }
                            },
                            "probes": {
                                "liveness": {
                                    "path": "/api/healthz",
                                    "port": 3000
                                },
                                "readiness": {
                                    "path": "/api/readyz",
                                    "port": 3000
                                }
                            },
                            "annotations": {
                                "service": {
                                    "sage/group": "merestorage"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
